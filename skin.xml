<?xml version="1.0" encoding="iso-8859-1"?>
<!-- This skin is meant to be a reference for people who create new skins.
     If you leave out an entry, a predefined default value will be used. -->

<config>

  <!-- This subtree contains the graphics to use. -->
  <graphics>

    <!-- The background images separated by semicolons. Each month can have
         another background. -->
    <images value="bg.png;
                   bg.png;
                   bg.png;
                   bg.png;
                   bg.png;
                   bg.png;
                   bg.png;
                   bg.png;
                   bg.png;
                   bg.png;
                   bg.png;
                   bg.png"/>

    <!-- The image for highlighting the current day. -->
    <today value="today.png"/>

    <!-- The images for the navigation buttons. -->
    <nav-prev value="prev.png"/>
    <nav-home value="home.png"/>
    <nav-next value="next.png"/>

  </graphics>


  <!-- This subtree contains all geometry settings (except for those that the
       user may change, e.g. the position of the main window). -->
  <geometry>

    <!-- Settings for the main window. -->
    <window>
      <width value="250"/>
      <height value="250"/>
    </window>

    <!-- Settings for the navigation buttons. -->
    <navigation>
      <x value="110"/>
      <y value="38"/>
    </navigation>

    <!-- Settings for the month label. -->
    <month>
      <x value="12"/>
      <y value="4"/>
    </month>

    <!-- Settings for the year label. The year will be placed next to the
         month (to the right or to the left, depending on the locale) if no
         values are given.
         These settings are ignored by 'gDeskCal' versions prior to 0.32. -->
    <year>
      <x value="210"/>
      <y value="16"/>
    </year>

    <!-- Settings for the weekdays label.
         hspacing is the width of the gap between days. -->
    <weekdays>
      <x value="9"/>
      <y value="50"/>
      <width value="24"/>
      <height value="20"/>
      <hspacing value="11"/>
    </weekdays>

    <!-- Settings for days label.
         hspacing is the width of the gap between days.
         vspacing is the height of the gap between days. -->
    <days>
      <x value="8"/>
      <y value="86"/>
      <width value="23"/>
      <height value="19"/>
      <hspacing value="12"/>
      <vspacing value="14"/>
    </days>

  </geometry>


  <!-- The fonts used by the calendar. The font names must be in a form that
       the Pango library understands and with the size being measured in pixels
       instead of points. -->
  <fonts>
    <year value="sans bold 16"/>
    <month value="serif bold italic 24"/>
    <weekdays value="serif bold 14"/>
    <days value="sans bold 18"/>
  </fonts>


  <!-- The colors to use. -->
  <colors>
    <year value="gray90"/>
    <month value="white"/>
    <weekdays value="yellow"/>
    <days value="black"/>
  </colors>

</config>
